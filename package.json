{
  "name": "aklow-workspace",
  "version": "1.0.0",
  "description": "Aklow Workspace - Chat-zentrierte AppShell",
  "main": "electron/main.js",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "pnpm build && electron-builder",
    "electron:build:mac": "pnpm build && electron-builder --mac",
    "electron:build:win": "pnpm build && electron-builder --win",
    "electron:build:linux": "pnpm build && electron-builder --linux",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "tokens:audit": "node scripts/token-audit.js",
    "design:guard": "node scripts/design-guard.js",
    "chat:guard": "node scripts/chat-layout-guard.js",
    "audit:security": "tsx scripts/security-audit-api-routes.ts",
    "dev:token": "node scripts/get-dev-token.js",
    "validate:json": "node ../../scripts/validate-json.mjs",
    "ci": "pnpm validate:json && pnpm lint && pnpm typecheck && pnpm test && pnpm audit:security && pnpm tokens:audit && pnpm design:guard && pnpm chat:guard && pnpm build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/query-persist-client-core": "^5.91.12",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "@types/jsonwebtoken": "^9.0.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "i18next": "^23.16.8",
    "isomorphic-dompurify": "^2.34.0",
    "jsonwebtoken": "^9.0.3",
    "katex": "^0.16.11",
    "lucide-react": "^0.561.0",
    "mermaid": "^11.3.0",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "openai": "^6.10.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^15.7.4",
    "react-markdown": "^10.1.0",
    "react-virtuoso": "^4.17.0",
    "recharts": "^3.6.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.15",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9",
    "eslint-config-next": "^16.0.10",
    "glob": "^13.0.0",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^14.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "uuid": "^13.0.0",
    "vitest": "^4.0.15",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aklow.workspace",
    "productName": "Aklow Workspace",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "public/**/*",
      "package.json",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon-512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon-512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "dmg": {
      "title": "Aklow Workspace Installer",
      "icon": "public/icon-512.png",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm design:guard --staged",
      "pnpm chat:guard",
      "eslint --fix"
    ],
    "*.json": [
      "node ../../scripts/validate-json.mjs --staged"
    ]
  }
}
